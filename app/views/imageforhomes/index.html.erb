<%if user_signed_in? %>
<p id="notice"><%= notice %></p>

<div class="section no-pad-bot">
  <div class="container">
    <div class="row main-text-color">

      <h3>Listing Home's Image</h3>

      <table>
        <thead>
          <tr>
            <th>Image name</th>
            <th>Description</th>
            <th>Image</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @imageforhomes.each do |imageforhome| %>
          <tr>
            <td><%= imageforhome.image_name %></td>
            <td><%= imageforhome.description %></td>
            <td><%= image_tag imageforhome.image.url(:thumb) %></td>
            <td><%= link_to 'Show', imageforhome %></td>
            <td><%= link_to 'Edit', edit_imageforhome_path(imageforhome) %></td>
            <td><%= link_to 'Destroy', imageforhome, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <a class="waves-effect waves-light btn blue darken-4 right" href= "/imageforhomes/new">New Image for Home</a>
  </div>
</div>
<br><br>

<% else %>

<p id="notice"><%= notice %></p>
<h3 class="center hide-on-small-only">Home</h3>
<h5 class="center hide-on-med-and-up">Home</h5>
<div class="row">
  <div class = "col s12 ">
    <div class="slider">
      <ul class="slides">
        <% @imageforhomes.each do |imageforhome| %>
        <li>
          <img class="" src= <%= imageforhome.image.url(:superlarge) %>  >

          <div class="caption center-align">
            <h3></h3>
            <h5 class="light grey-text text-lighten-3"></h5>
          </div>
        </li>
        <% end%>

      </ul>
    </div>
  </div>
</div>

<% end%>

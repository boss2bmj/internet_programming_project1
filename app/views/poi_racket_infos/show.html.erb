<div class="section no-pad-bot">
  <div class="container">
    <div class="row main-text-color">
      <p id="notice"><%= notice %></p>
      <img class="materialboxed" width="350" data-caption= <%= @poi_racket_info.title_name %> src= <%= @poi_racket_info.image.url(:large) %> >
      <table class="striped">
        <thead>
          <tr>
            <th data-field="title">Title</th>
            <th data-field="description">Description</th>
            <th data-field="shaft">Shaft</th>
            <th data-field="weight">Weight</th>
            <th data-field="length">Lenght</th>
            <th data-field="price">Price</th>
            <%if user_signed_in? %>
            <th data-field="stock">Stock</th>
            <%end%>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td> <%= @poi_racket_info.title_name %> </td>
            <td> <%= @poi_racket_info.description %> </td>
            <td> <%= @poi_racket_info.shaft %> </td>
            <td> <%= @poi_racket_info.weight %> </td>
            <td> <%= @poi_racket_info.length %> </td>
            <td> <%= number_to_currency(@poi_racket_info.price, :unit => 'à¸¿') %> </td>
            <%if user_signed_in? %>
            <td> <%= @poi_racket_info.stock %> </td>
            <%end%>
          </tr>
        </tbody>
      </table> <br>
      <a class="waves-effect waves-light btn blue darken-4"   <%= link_to 'Edit', edit_poi_racket_info_path(@poi_racket_info) %> </a>
      <a class="waves-effect waves-light btn blue darken-4" <%= link_to 'Back', poi_racket_infos_path %> </a>
    </div>
  </div>
</div>

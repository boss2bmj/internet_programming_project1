<%if user_signed_in? %>

<div class="section no-pad-bot">
  <div class="container">
    <div class="row main-text-color">
<h3>Listing Products for Admin</h3>

<table class="bordered highlight">
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= number_to_currency(product.price, :unit => '฿') %></td>

        <td><%= product.category %></td>
        <td><%= product.subcategory %></td>
        <td><%= product.stock %></td>


        <td><%= link_to 'Show', product %></td>
        <!-- <td><a href="/cart/<%= product.id %>" class="">Add to Cart</a></td> -->

          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>




      </tr>
    <% end %>
  </tbody>
</table>

</div>
<a class="waves-effect waves-light btn blue darken-4 right" href= "/products/new">New Product</a>
</div>
</div>
<br><br>
<% else %>

<h3 class="center hide-on-small-only">All Collections</h3>
  <h5 class="center hide-on-med-and-up">All Collections</h5>






<div class="row">
<% @products.each do |product| %>
  <% if product.stock != 0 %>
  <div class="col s12 m6 l4">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src= <%= product.image.url(:large) %>  >
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"><%= product.title %><i class="fa fa-ellipsis-v right"></i></span>
        <p><%= number_to_currency(product.price, :unit => '฿') %></p>
        <br>
        <!-- <p><a href="/cart/<%= product.id %>" class="">Add to Cart</a></p> -->
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4"><%= product.title %><i class="fa fa-times right"></i></span>
        <p>Description: <%= product.description %></p>
        <p>Price: <%= number_to_currency(product.price, :unit => '฿') %></p>
        <p>Category: <%= product.category %></p>
        <p>Sub Category: <%= product.subcategory %></p>
        <p>In Stock</p>
        <p>For more information, Please Click button</p>
        <a class="waves-effect waves-light btn blue darken-4" href="/page/contact"><i class="fa fa-hand-o-right"></i>Contact us</a>
      </div>
    </div>
  </div>
<%end%>
<% end %>
</div>


<br>

<% end%>

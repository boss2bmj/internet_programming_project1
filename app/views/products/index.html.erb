<%if user_signed_in? %>

<p id="notice"><%= notice %></p>

<h1>Listing Products for Admin</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Description</th>
      <th>Image</th>
      <th>Price</th>
      <th>Category</th>
      <th>Subcategory</th>
      <th>Stock</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= image_tag product.image.url(:thumb) %></td>
        <td><%= number_to_currency(product.price, :unit => '฿') %></td>

        <td><%= product.category %></td>
        <td><%= product.subcategory %></td>
        <td><%= product.stock %></td>


        <td><%= link_to 'Show', product %></td>
        <td><a href="/cart/<%= product.id %>" class="">Add to Cart</a></td>

          <td><%= link_to 'Edit', edit_product_path(product) %></td>
          <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>




      </tr>
    <% end %>
  </tbody>
</table>

<br>
  <%= link_to 'New Product', new_product_path %>
<% else %>

<p id="notice"><%= notice %></p>
<h4 class="center hide-on-small-only">All Collections</h4>
  <h5 class="center hide-on-med-and-up">All Collections</h5>






<div class="row">
<% @products.each do |product| %>
  <div class="col s12 m6 l4">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src= <%= product.image.url(:large) %> >
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"><%= product.title %><i class="fa fa-ellipsis-v right"></i></span>
        <p><%= number_to_currency(product.price, :unit => '฿') %></p>
        <br>
        <p><a href="/cart/<%= product.id %>" class="">Add to Cart</a></p>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4"><%= product.title %><i class="fa fa-times right"></i></span>
        <p><%= product.description %></p>
        <p><%= number_to_currency(product.price, :unit => '฿') %></p>
      </div>
    </div>
  </div>

<% end %>
</div>



<br>
<% end%>

<div class="section no-pad-bot">
  <div class="container">
    <div class="row main-text-color">
      <img class="materialboxed" width="350" data-caption= <%= @poi_apparel_info.title_name %> src= <%= @poi_apparel_info.image.url(:large) %> >
      <table class="striped">
        <thead>
          <tr>
            <th data-field="title">Title</th>
            <th data-field="description">Description</th>
            <th data-field="price">Price</th>
            <%if user_signed_in? %>
            <th data-field="stock">Stock</th>
            <%end%>
          </tr>
        </thead>

        <tbody>
          <tr>
            <td> <%= @poi_apparel_info.title_name %> </td>
            <td> <%= @poi_apparel_info.description %> </td>
            <td> <%= number_to_currency(@poi_apparel_info.price, :unit => 'à¸¿') %> </td>
            <%if user_signed_in? %>
            <td> <%= @poi_apparel_info.stock %> </td>
            <%end%>
          </tr>
        </tbody>
      </table> <br>
      <a class="waves-effect waves-light btn blue darken-4"   <%= link_to 'Edit', edit_poi_apparel_info_path(@poi_apparel_info) %> </a>
      <a class="waves-effect waves-light btn blue darken-4" <%= link_to 'Back', poi_apparel_infos_path %> </a>
    </div>
  </div>
</div>

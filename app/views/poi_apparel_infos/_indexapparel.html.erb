<div class="row">
<% @poi_apparel_infos.each do |poi_apparel_info| %>
  <% if poi_apparel_info.stock != 0 %>
  <div class="col s12 m6 l4">
    <div class="card">
      <div class="card-image waves-effect waves-block waves-light">
        <img class="activator" src= <%= poi_apparel_info.image.url(:large) %>  >
      </div>
      <div class="card-content">
        <span class="card-title activator grey-text text-darken-4"><%= poi_apparel_info.title_name %><i class="fa fa-ellipsis-v right"></i></span>
        <p><%= number_to_currency(poi_apparel_info.price, :unit => '฿') %></p>
        <br>
      </div>
      <div class="card-reveal">
        <span class="card-title grey-text text-darken-4"><%= poi_apparel_info.title_name %><i class="fa fa-times right"></i></span>
        <p>Description: <%= poi_apparel_info.description %></p>
        <p>Price: <%= number_to_currency(poi_apparel_info.price, :unit => '฿') %></p>
        <p>In Stock</p>
        <p>For more information, Please Click button</p>
        <a class="waves-effect waves-light btn blue darken-4" href="/page/contact"><i class="fa fa-hand-o-right"></i>Contact us</a>
      </div>
    </div>
  </div>
<%end%>
<% end %>
</div>



<br>
